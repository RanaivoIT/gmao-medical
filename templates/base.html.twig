<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>GMAO - {% block title %}{% endblock %}</title>
        <link rel="icon" href="/img/g.png">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        <link href="/css/datatables.css" rel="stylesheet" />
        <link href="/css/bootstrap.min.css" rel="stylesheet" />
        <script src="/js/all.v6.1.0.js" crossorigin="anonymous"></script>
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="sb-nav-fixed">
        
       {{ include('includes/navbar.html.twig') }}

        <div id="layoutSidenav">

            {{ include('includes/sidenav.html.twig') }}

            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">

                        {% for label, messages in app.flashes %}
                            <div class="alert alert-{{ label }} my-2">
                                {% for message in messages %}
                                    <span>{{ message | raw }}</span>
                                {% endfor %}
                            </div>
                        {% endfor %}

                        {% block body %}
                        
                        {% endblock %}

                    </div>
                </main>

               {{ include('includes/footer.html.twig') }}

            </div>

        </div>

        <script src="/js/bootstap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="/js/scripts.js"></script>
        <script src="/js/chart.min.js" crossorigin="anonymous"></script>
        <script src="/js/datatables.js" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
